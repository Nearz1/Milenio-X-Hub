-- Biblioteca Principal
local Library = {}

-- Cria a Interface Principal
function Library:CreateInterface(name)
    local InterfaceGui = Instance.new("ScreenGui")
    InterfaceGui.Name = name or "InterfaceGui"
    InterfaceGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    -- Frame Principal com Bordas e Imagem de Fundo
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Size = UDim2.new(0, 529, 0, 317)
    MainFrame.Position = UDim2.new(0.225, 0, 0.173, 0)
    MainFrame.BackgroundColor3 = Color3.fromRGB(4, 4, 4)
    MainFrame.BorderColor3 = Color3.fromRGB(255, 255, 255)
    MainFrame.Parent = InterfaceGui

    -- Imagem de Fundo
    local BackgroundImage = Instance.new("ImageLabel")
    BackgroundImage.Name = "BackgroundImage"
    BackgroundImage.Size = UDim2.new(1, 0, 1, 0)
    BackgroundImage.Position = UDim2.new(0, 0, 0, 0)
    BackgroundImage.Image = "rbxassetid://1234567890" -- Substitua pelo ID da sua imagem
    BackgroundImage.BackgroundTransparency = 1
    BackgroundImage.Parent = MainFrame

    -- Título
    local Title = Instance.new("TextLabel")
    Title.Name = "Title"
    Title.Text = name or "Interface"
    Title.Font = Enum.Font.PermanentMarker
    Title.TextScaled = true
    Title.BackgroundTransparency = 1
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.Size = UDim2.new(0, 366, 0, 43)
    Title.Position = UDim2.new(0.17, 0, 0.03, 0)
    Title.Parent = MainFrame

    -- Botões com Imagens
    local ButtonWithImage = Instance.new("ImageButton")
    ButtonWithImage.Name = "ImageButton"
    ButtonWithImage.Size = UDim2.new(0, 100, 0, 50)
    ButtonWithImage.Position = UDim2.new(0.1, 0, 0.8, 0)
    ButtonWithImage.Image = "rbxassetid://987654321" -- Substitua pelo ID da sua imagem
    ButtonWithImage.Parent = MainFrame

    ButtonWithImage.MouseButton1Click:Connect(function()
        print("Botão com imagem clicado!")
    end)

    -- Área de Tabs
    local TabFrame = Instance.new("Frame")
    TabFrame.Name = "TabFrame"
    TabFrame.Size = UDim2.new(0, 139, 0, 247)
    TabFrame.Position = UDim2.new(0, 0, 0.217, 0)
    TabFrame.BackgroundColor3 = Color3.fromRGB(4, 4, 4)
    TabFrame.BorderColor3 = Color3.fromRGB(255, 255, 255)
    TabFrame.Parent = MainFrame

    -- Scrolling para Tabs
    local TabScrolling = Instance.new("ScrollingFrame")
    TabScrolling.Name = "TabScrolling"
    TabScrolling.Size = UDim2.new(1, 0, 1, 0)
    TabScrolling.CanvasSize = UDim2.new(0, 0, 5, 0)
    TabScrolling.BackgroundTransparency = 1
    TabScrolling.Parent = TabFrame

    local TabLayout = Instance.new("UIListLayout")
    TabLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    TabLayout.SortOrder = Enum.SortOrder.LayoutOrder
    TabLayout.Padding = UDim.new(0.03, 0)
    TabLayout.Parent = TabScrolling

    -- Função para Adicionar Tabs
    function Library:AddTab(tabName)
        local TabButton = Instance.new("TextButton")
        TabButton.Name = tabName or "TabButton"
        TabButton.Text = tabName
        TabButton.Font = Enum.Font.SourceSans
        TabButton.TextSize = 14
        TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        TabButton.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
        TabButton.Size = UDim2.new(0, 100, 0, 30)
        TabButton.Parent = TabScrolling

        local TabContentFrame = Instance.new("Frame")
        TabContentFrame.Name = tabName .. "Content"
        TabContentFrame.Size = UDim2.new(1, 0, 1, 0)
        TabContentFrame.BackgroundTransparency = 1
        TabContentFrame.Visible = #self.Tabs == 0
        TabContentFrame.Parent = MainFrame

        return TabContentFrame
    end

    return MainFrame
end

return Library
